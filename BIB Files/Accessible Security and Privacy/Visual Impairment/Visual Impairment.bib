	publisher = {Association for Computing Machinery},
	author = {Reyes-Cruz, Gisela and Fischer, Joel E. and Reeves, Stuart},
	month = apr,
	year = {2020},
	keywords = {assistive technology, disability, ethnography, ethnomethodology, visual impairments},
	pages = {1--13},
	file = {1149037_WieselI_2022.pdf:files/654/1149037_WieselI_2022.pdf:application/pdf;Accepted Version:files/348/Reyes-Cruz et al. - 2020 - Reframing Disability as Competency Unpacking Ever.pdf:application/pdf},
